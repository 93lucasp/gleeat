
<div class="container">
{{!-- lopp for each post --}}
 <div id="createMeal">
   <button id="createModalButton" type="button" class="btn btn-primary" data-toggle="modal" data-target="#triggerModal" >  Create Moment </button>
</div>
  {{#each posts}}
  
    <div class="col-md-3">
      <div class="panel panel-default">
        <div id= "posts" class="panel-body">
          <div id="postTitle" class="postTitleClass"><h2>{{this.title}}</h2></div><br>

         {{!--  {{this.postedBy}} --}}
          {{this.user.firstName}}
        {{!--   <p>ciao: {{currentUser._id}}</p> --}}
          {{!-- Skype button --}}
          <script type="text/javascript" src="https://secure.skypeassets.com/i/scom/js/skype-uri.js"></script>
            <div id="{{this._id}}">
              <div id="SkypeButton_Call_{{this.user.skypeName}}_1">
               <script type="text/javascript">
                 Skype.ui({
                   "name": "call",
                   "element": "{{this._id}}",
                   "participants": ["{{this.user.skypeName}}"],
                   "imageSize": 24
                 });
               </script>
              </div>
            </div>
          {{!-- {{#if currentUser}} --}}
          {{!-- Delete button --}}
          <button data-_id="{{this._id}}" class='btn btn-danger delete-album' onclick="deletePost(this)">Delete Event</button>

           {{!-- Edit button --}}
          <button data-_id="{{this._id}}" class = "btn btn-primary editModalButton" type="button" data-toggle="modal" data-target="#triggerModalEdit"> Edit </button>
       {{!--    {{/if}} --}}

        </div>

      </div>

    </div>
   {{/each}}




<!-- begin userModal: this is not visible until you call .modal() on it -->
<div class="modal fade" tabindex="-1" role="dialog" id="triggerModalEdit">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Edit</h4>
      </div>
      <div class="modal-body">
        <fieldset class='form-horizontal'>
          
          {{!-- form begins --}}
          <form id="newPost">
          <!-- Text input-->
          <input type="text" hidden=true id="postID">
            <div class="form-group">
              <label class="col-md-4 control-label" for="title">Title</label>
              <div class="col-md-4">
                <input name="title" type="text" placeholder="" class="form-control input-md titleEdit" required="">
              </div>
            </div>
  
            <button type="button" class="btn btn-primary" onclick="editPost(this)" data-dismiss="modal" id="savePost">Save</button>
          </form>
          {{!-- form ends --}}
        </fieldset>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>
<!-- Button trigger modal -->


 {{!-- button to create a meal --}}
